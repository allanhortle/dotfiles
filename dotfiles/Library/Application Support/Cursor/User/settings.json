{
    "biome.searchInPath": false,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.semanticHighlighting.enabled": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "security.promptForLocalFileProtocolHandling": false,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editorAssociations": {
        "*.plist": "default"
    },
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "markdown",
        "scminput"
    ],
    // Status bar - maybe replace with APC https://github.com/drcika/apc-extension
    "nvim-ui.nvimColorNormal": "#6871ff",
    "nvim-ui.nvimColorInsert": "#cbe645",
    "nvim-ui.nvimColorVisual": "#ff77ff",
    "nvim-ui.nvimColorCustomizationKeys":  ["statusBar.background"],

    "workbench.colorTheme": "Ayu Mirage",
    "workbench.colorCustomizations": {
        "foreground": "#d9d7ce",
        "sideBar.border": "#11141b",
        "editorGroupHeader.tabsBorder": "#11141b",
        "titleBar.border": "#11141b",
        "tab.border": "#11141b",
        "statusBar.border": "#11141b",
        "editor.background": "#1A1F28",
        "sideBar.background": "#1A1F28",
        "tab.activeBackground": "#1A1F28",
        "titleBar.activeBackground": "#1A1F28",
        "editorGroupHeader.tabsBackground": "#1A1F28",
        "statusBar.foreground": "#1A1F28",
        "editor.border": "#1A1F28",

        "focusBorder": "#686868",
        "statusBar.background": "#6871ff",

        "gitDecoration.addedResourceForeground": "#d9d7ce",
        "gitDecoration.modifiedResourceForeground": "#d9d7ce",
        "gitDecoration.deletedResourceForeground": "#d9d7ce",
        "gitDecoration.renamedResourceForeground": "#d9d7ce",
        "gitDecoration.stageModifiedResourceForeground": "#d9d7ce",
        "gitDecoration.stageDeletedResourceForeground": "#d9d7ce",
        "gitDecoration.untrackedResourceForeground": "#d9d7ce",
        "gitDecoration.ignoredResourceForeground": "#d9d7ce",
        "gitDecoration.conflictingResourceForeground": "#d9d7ce",
        "gitDecoration.submoduleResourceForeground": "#d9d7ce",
    },
}

