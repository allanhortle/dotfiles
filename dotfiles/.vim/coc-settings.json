{
    "Lua.diagnostics.globals": ["vim"],
    "biome.enable": true,
    "biome.requireConfiguration": true,
    "coc.preferences.formatOnSave": true,
    "coc.preferences.renameFillCurrent": false,
    "coc.source.dictionary.filetypes": [ "markdown" ],
    "coc.source.word.filetypes": [ "markdown" ],
    "explorer.file.showHiddenFiles": true,
    "explorer.keyMappings.global": { "<c-v>": "open:vsplit" },
    "explorer.quitOnOpen": true,
    "hover.floatConfig": { "maxWidth": 200 },
    "javascript.validate.enable": false,
    "json.format.enable": false,
    "prettier.disableLanguages": [ "markdown" ],
    "prettier.enable": false,
    "python.formatting.blackPath": "/opt/homebrew/bin/black",
    "python.formatting.provider": "black",
    "snippets.loadFromExtensions": false,
    "snippets.priority": 1,
    "snippets.ultisnips.pythonPrompt": false,
    "suggest.noselect": true,
    "tailwindCSS.experimental.classRegex": [ [ "([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]" ] ],
    "tsserver.log": "verbose",
    "tsserver.maxTsServerMemory": 8192,
    "tsserver.trace.server": "verbose",
    "tsserver.useLocalTsdk": true,
    "typescript.autoClosingTags": false,
    "typescript.preferGoToSourceDefinition": true,
    "workspace.bottomUpFiletypes": [ "typescriptreact", "typescript" ],
    "workspace.rootPatterns": [ "package.json", ".git" ]
}
